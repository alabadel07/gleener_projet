{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <section class=""><div class="container h-100">
    {% for message in app.flashes('error') %}
    <div class="alert alert-danger">{{ message }}</div>
{% endfor %}

            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="card text-black" style="border-radius: 25px;">
                    <div class="card-body p-md-5">
                        <div class="row justify-content-center">
                            <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">S'enregistrer</p>

                                {{ form_start(registrationForm) }} 

                                <div class="form-group pb-2">
                                    <label>Nom d'utilisateur</label>
                                    {{ form_widget(registrationForm.username) }}
                                </div>

                                <div class="form-group pb-2">
                                    <label>E-Mail</label>
                                    {{ form_widget(registrationForm.email) }}
                                </div>

                                <div class="form-group pb-2">
                                    <label>Prénom</label>
                                    {{ form_widget(registrationForm.firstname) }}
                                </div>

                                <div class="form-group pb-2">
                                    <label>Nom</label>
                                    {{ form_widget(registrationForm.lastname) }}
                                </div>

                                <div class="form-group pb-2">
                                    <label>Rôles</label>
                                    {{ form_widget(registrationForm.roles) }}
                                </div>

                                <div class="form-group pb-2">
                                    {{ form_widget(registrationForm.password) }}
                                </div>

        
                                <div class="d-flex justify-content-center pt-2">
                                    <button type="submit" class="btn btn-primary btn-lg">Valider</button>
                                </div>
                            </div>
                        </div>
                        {{ form_rest(registrationForm) }}
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1"></p>
    </footer>
{% endblock %}
